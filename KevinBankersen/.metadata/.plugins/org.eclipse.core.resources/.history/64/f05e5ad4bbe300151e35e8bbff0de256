package eu.bankersen.kevin.ql.gui.dialog;

import java.util.List;
import java.util.Set;

import javax.swing.JOptionPane;

import eu.bankersen.kevin.ql.typechecker.errors.TypeCheckError;

public class ErrorDialog {
    
    public ErrorDialog(Set<TypeCheckError> errors) {
	StringBuilder sb = new StringBuilder();
	errors.forEach(error -> sb.append(error + "\n"));
	showWarning("Type Errors!", sb.toString());
    }
    
    public ErrorDialog(List<String[]> errors) {
	StringBuilder sb = new StringBuilder();
	errors.forEach(error -> sb.append(error + "\n"));
	showWarning("Parse Errors", sb.toString());
    }

    private void showWarning(String errorType, String message) {
	JOptionPane.showMessageDialog(
		    null,
		    message,
		    errorType,
		    JOptionPane.ERROR_MESSAGE);
	System.exit(1);
    }
}
