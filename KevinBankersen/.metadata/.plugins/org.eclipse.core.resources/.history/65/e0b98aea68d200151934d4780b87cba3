package eu.bankersen.kevin.ql.ast.expr;

import eu.bankersen.kevin.ql.ast.var.Type;

public class boolLiteral extends BooleanExpr {

    private final Boolean value;

    public boolLiteral(final Boolean value) {
	this.value = value;
    }

    public final Type getType() {
	return Type.BOOLEAN;
    }

    @Override
    public final Boolean result(final SymbolTabel table) {
	return value;
    }

    public final Boolean result() {
	return value;
    }

    @Override
    public final Boolean checkType(final SymbolTabel table) {
	return true;
    }
}
