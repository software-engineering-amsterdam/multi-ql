package eu.bankersen.kevin.ql.ast.expr;

import eu.bankersen.kevin.ql.ast.type.IntType;
import eu.bankersen.kevin.ql.ast.type.Type;
import eu.bankersen.kevin.ql.context.Context;
import eu.bankersen.kevin.ql.context.SymbolTable;
import eu.bankersen.kevin.ql.context.errors.ExprTypeError;

public abstract class NumberExpr extends Expr {

    private final Expr lhs;
    private final Expr rhs;
    private final int line;

    public NumberExpr(Expr lhs, Expr rhs, int line) {
	super(new IntType());
	this.lhs = lhs;
	this.rhs = rhs;
	this.line = line;
    }

    public Expr lhs() {
	return lhs;
    }

    public Expr rhs() {
	return rhs;
    }

    public abstract Double eval(SymbolTable symbolTable) throws EvaluateExeption;

    @Override
    public Context checkType(Context context) {
	context = lhs.checkType(context);
	context = rhs.checkType(context);

	if (!isCompatible(lhs.getType(context), rhs.getType(context), context)) {  
	    context.addError(new ExprTypeError(line, 
		    lhs.getType(context),
		    rhs.getType(context),
		    getType(context)));
	}
	return context;
    }
    
    protected boolean isCompatible(Type type1, Type type2, Context context) {
	return getType(context).isCompatible(type2) 
		&& getType(context).isCompatible(type1) 
		&& type1.isCompatible(type2);
    }
}
