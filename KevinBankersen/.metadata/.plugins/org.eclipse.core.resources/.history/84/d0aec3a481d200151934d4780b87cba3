package eu.bankersen.kevin.ql.ast;

import eu.bankersen.kevin.ql.ast.expr.Expr;
import eu.bankersen.kevin.ql.symboltable.SymbolTabel;

public class Variable  extends Expr {

    private final String name;
    private final Type type;
    private Expr value;

    public Variable(final String name, final Type type) {
	this.name = name;
	this.type = type;
    }

    public Variable(final String name, final Type type, final Expr expr) {
	this.name = name;
	this.type = type;
	this.value = expr;
    }

    public final String getName() {
	return name;
    }

    public final Type getType() {
	return type;
    }

    public final Boolean checkType() {
	
	SymbolTabel.addVariable(name, type);
	
	if (value != null) {
	    return value.checkType() && value.getType() == type;
	}
	return true;
    }

    public final void setValue(final Expr value) {
	this.value = value;
    }

    public final Object getValue() {
	return value.result();
    }

    @Override
    public final Object result() {
	return value.result();
    }
    
    @Override
    public final String toString(){
	return name + " : " + value.result();
	
    }
}
