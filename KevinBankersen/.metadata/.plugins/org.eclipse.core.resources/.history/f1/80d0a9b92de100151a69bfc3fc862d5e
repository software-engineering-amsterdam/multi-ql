package eu.bankersen.kevin.ql.ast.expr;

import eu.bankersen.kevin.ql.ast.type.IntType;
import eu.bankersen.kevin.ql.ast.type.TypeObject;
import eu.bankersen.kevin.ql.context.Context;
import eu.bankersen.kevin.ql.context.SymbolTable;
import eu.bankersen.kevin.ql.context.errors.ExprTypeError;

public abstract class IntegerExpr extends Expr {

    private final Expr lhs;
    private final Expr rhs;
    private final int line;

    public IntegerExpr(Expr lhs, Expr rhs, int line) {
	super(new IntType());
	this.lhs = lhs;
	this.rhs = rhs;
	this.line = line;
    }

    public Expr lhs() {
	return lhs;
    }

    public Expr rhs() {
	return rhs;
    }

    public abstract Integer eval(SymbolTable symbolTable) throws EvaluateExeption;

    @Override
    public Context checkType(Context context) {
	context = lhs.checkType(context);
	context = rhs.checkType(context);

	if (!isCompatible(lhs.getType(context), rhs.getType(context), context))) {    
	    context.addError(new ExprTypeError(
		    line,
		    lhs.getType(context).getType(),
		    rhs.getType(context).getType(),
		    getType(context).getType())
		    );
	}
	return context;
    }
    
    private boolean isCompatible(TypeObject type1, TypeObject type2, Context context){
	return getType(context).compatible(type2) 
		&& getType(context).compatible(type2) 
		&& type1.compatible(type2);
    }
}
