package eu.bankersen.kevin.ql.context;

import eu.bankersen.kevin.ql.ast.Type;

public class Errors {
    
    public class TypeError extends Errors{
	    
	    private String message;

	    public void Semantic(int line, Type lhs, Type rhs, Type expr) {
		message = "TYPE_ERROR @Line " + line 
    			+ ": expected " + lhs 
    			+ " got " + rhs + "!";
	    }
	    
	    public void Semantic(Type lhs, Type rhs) {
		message = "TYPE_ERROR @Line " + line 
    			+ ": expected " + lhs 
    			+ " got " + rhs + "!";
	    }
	}
    
    public class SemanticError extends Errors{
	    
	    private String message;

	    public void Semantic(Type lhs, Type rhs, Type expr) {
		// TODO Auto-generated constructor stub
	    }
	    
	    public void Semantic(Type lhs, Type rhs) {
		// TODO Auto-generated constructor stub
	    }
	}

}
