package eu.bankersen.kevin.ql.ast.expr;

import eu.bankersen.kevin.ql.ast.Type;
import eu.bankersen.kevin.ql.context.EvaluateExeption;

public abstract class BooleanExpr extends Expr {

    private final Expr lhs;
    private final Expr rhs;
    private final int line;
    
    public BooleanExpr(Expr lhs, Expr rhs, int line) {
	super(Type.BOOLEAN);
	this.lhs = lhs;
	this.rhs = rhs;
	this.line = line;
    }
    
    public Expr lhs() {
	return lhs;
    }
    
    public Expr rhs() {
	return rhs;
    }
    
    public abstract Boolean eval() throws EvaluateExeption;
    
    @Override
    public Context checkType(Context context) {
	context = lhs.checkType(context);
	context = rhs.checkType(context);
	
	if (!lhs.getType().equals(rhs.getType())) {
	  context.addError("SYMANTIC_ERROR @Line " + line 
		  + ": types must be equal, got " + lhs.getType() 
		  + " and " + rhs.getType());  
	}
	return context;
    }
}
