package eu.bankersen.kevin.ql.ast.stat;

import eu.bankersen.kevin.ql.ast.TypeCheckInterface;
import eu.bankersen.kevin.ql.ast.expr.Expr;
import eu.bankersen.kevin.ql.ast.type.Type;
import eu.bankersen.kevin.ql.context.symboltable.SymbolTable;
import eu.bankersen.kevin.ql.context.symboltable.SymbolTableBuilder;
import eu.bankersen.kevin.ql.context.symboltable.SymbolTableInterface;
import eu.bankersen.kevin.ql.context.typeanalyzer.Context;

public abstract class Statement implements TypeCheckInterface, SymbolTableInterface {

    private final Type type;
    private final Expr expr;
    private final int line;

    public Statement(Type type, Expr expr, int line) {
	this.type = type;
	this.expr = expr;
	this.line = line;
    }

    public Expr expr() {
	return expr;
    }

    public int line() {
	return line;
    }

    public Type type() {
	return type;
    }
    
    public abstract SymbolTableBuilder buildSymbolTable(SymbolTableBuilder builder);
    
    public abstract Context checkType(Context context);

    public abstract SymbolTable evalStatement(SymbolTable symbolTable);

    public abstract SymbolTable visible(SymbolTable symbolTable, Boolean visible);


}
