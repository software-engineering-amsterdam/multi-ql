package eu.bankersen.kevin.ql.util.testing.widget;

import java.util.ArrayList;
import java.util.List;

import javax.swing.JPanel;

import eu.bankersen.kevin.ql.util.testing.ViewListener;

abstract class Widget {
    private final String name;
    protected final JPanel panel;
    private List<ViewListener> ui;
    
    Widget(String name){
	this.name = name;
	this.panel = new JPanel();
	this.ui = new ArrayList<ViewListener>();
    }
    
    public JPanel build() {
	return panel;
    }
    
    protected void viewUpdate(Object value) {
	ui.forEach(l -> l.viewUpdate(name, value));
    }

}
