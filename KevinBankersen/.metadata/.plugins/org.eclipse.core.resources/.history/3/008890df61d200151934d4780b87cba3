package eu.bankersen.kevin.ql.ast.form;

import eu.bankersen.kevin.ql.ast.expr.SymbolTabel;
import eu.bankersen.kevin.ql.ast.var.Type;

public class Form {

    private String name;
    private Block body;
    private SymbolTabel table;

    public Form(final String name, final Block body) {
	this.name = name;
	this.body = body;
    }

    public final void setSymbolTable(final SymbolTabel table) {
	this.table = table;
    }


    public final Boolean checkType() {
	return body.checkType(table);
    }

    @Override
    public final String toString() {

	StringBuilder sb;

	sb = new StringBuilder();
	sb.append("Form: " + name + "\n");
	sb.append(body);
	sb.append("\n");

	return sb.toString();
    }
}

