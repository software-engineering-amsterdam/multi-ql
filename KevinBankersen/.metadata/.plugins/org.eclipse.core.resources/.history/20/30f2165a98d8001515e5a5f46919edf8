package eu.bankersen.kevin.ql.ast.form;

import eu.bankersen.kevin.ql.context.Context;

public class Form {

    private final String name;
    private final Body body;

    public Form(String name, Body body) {
	this.name = name;
	this.body = body;
    }

    public Context checkType() {
	return body.checkType(new Context(name));
    }

    public Context evalForm(Context context) {
	return body.evalBody(context);
    }
    
    public String getName() {
	return name;
    }
    
    @Override
    public String toString() {

	StringBuilder sb;

	sb = new StringBuilder();
	sb.append("Results\nForm: " + name + "\n");
	sb.append(body);
	sb.append("\n");

	return sb.toString();
    }
}

