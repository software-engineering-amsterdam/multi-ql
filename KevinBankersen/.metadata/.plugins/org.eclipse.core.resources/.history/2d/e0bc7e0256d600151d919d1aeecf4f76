package eu.bankersen.kevin.ql.ast.expr;

import eu.bankersen.kevin.ql.ast.Type;

public abstract class IntegerExpr extends Expr {

    private final Expr lhs;
    private final Expr rhs;
    private final int line;
    
    public IntegerExpr(Expr lhs, Expr rhs, int line) {
	super(Type.INTEGER);
	this.lhs = lhs;
	this.rhs = rhs;
	this.line = line;
    }
    
    public Expr lhs() {
	return lhs;
    }
    
    public Expr rhs() {
	return rhs;
    }

    public abstract Integer eval();

    @Override
    public final void checkType() {
	lhs.checkType();
	rhs.checkType();

	Boolean check = lhs.getType().equals(getType()) && rhs.getType().equals(getType());

	if (!check) {
	    super.context.addError("TYPE_ERROR @Line " + line 
		    + ": expected " + getType()
		    + " got " + lhs.getType() 
		    + " and " + rhs.getType() 
		    );
	}
    }
}
