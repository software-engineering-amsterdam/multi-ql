package eu.bankersen.kevin.ql.ast;

import com.esotericsoftware.minlog.Log;

import eu.bankersen.kevin.ql.ast.expr.Expr;
import eu.bankersen.kevin.ql.symboltable.Context;
import eu.bankersen.kevin.ql.symboltable.SingletonSymbolTabel;

public class Variable {

    private final String name;
    private final Type type;
    private Expr expr;

    public Variable(final String name, final Type type) {
	this.name = name;
	this.type = type;
    }

    public Variable(final String name, final Type type, final Expr expr) {
	this.name = name;
	this.type = type;
	this.expr = expr;
    }

    public final String getName() {
	return name;
    }

    public final Type getType() {
	return type;
    }

    public final void checkType() {

	SingletonSymbolTabel.addVariable(name, type);

	if (expr != null) {
	    expr.checkType();
	    if (!expr.getType().equals(type)) {
		SingletonSymbolTabel.addError("Type missmatch, expected " + type + "got" + expr.getType());
	    }
	}
    }

    public final Object getValue() {
	return SingletonSymbolTabel.getValue(name);
    }

    public final void eval(final Context context) {

	if (expr != null) {
	    try {
		Object value = expr.eval(context);
		context.updateSymbol(name,value);
		Log.debug(name + ", new value=" + value);
	    } catch (NullPointerException e) {
		Log.debug(name + "requires more data");
	    }
	}

    }
}
