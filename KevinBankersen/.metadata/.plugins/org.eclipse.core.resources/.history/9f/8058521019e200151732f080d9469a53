package eu.bankersen.kevin.ql.ast.expr;

import eu.bankersen.kevin.ql.ast.AcceptMethods;
import eu.bankersen.kevin.ql.ast.type.Type;
import eu.bankersen.kevin.ql.context.Context;
import eu.bankersen.kevin.ql.context.SymbolTable;
import eu.bankersen.kevin.ql.symbol_table.SymbolTableBuilder;

public abstract class Expr implements AcceptMethods {
    
    private final Type type;
    private final Expr lhs;
    private final Expr rhs;
    
    public Expr(Type type) {
	this.type = type;
    }
    
    public Type getType(SymbolTable symbolTable) {
	return type;
    }

    public abstract Object eval(SymbolTable symbolTable) throws EvaluateExeption;
    
    @Override
    public SymbolTableBuilder buildSymbolTable(SymbolTableBuilder builder) {
	return builder.construct(this);
    }
}