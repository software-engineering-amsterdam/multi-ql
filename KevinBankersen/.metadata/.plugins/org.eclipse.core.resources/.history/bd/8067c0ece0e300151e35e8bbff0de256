package eu.bankersen.kevin.ql.ast.form;

import eu.bankersen.kevin.ql.VisitAccept;
import eu.bankersen.kevin.ql.ast.Visitor;
import eu.bankersen.kevin.ql.typechecker.symboltable.SymbolTable;

public class Form implements VisitAccept {

    private final String name;
    private final Body body;

    public Form(String name, Body body) {
	this.name = name;
	this.body = body;
    }
    
    public Body body() {
	return body;
    }
    
    public String name() {
	return name;
    }
    
    public SymbolTable evalForm(SymbolTable symbolTable) {
	return body.evalBody(symbolTable);
    }
    
    @Override
    public void accept(Visitor v) {
	v.visit(this);
    }
    
    
    
}

