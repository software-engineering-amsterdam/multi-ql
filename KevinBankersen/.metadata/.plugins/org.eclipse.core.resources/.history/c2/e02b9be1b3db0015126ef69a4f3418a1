package eu.bankersen.kevin.ql.util.testing.widget;

import java.util.ArrayList;
import java.util.List;

import javax.swing.JPanel;

import eu.bankersen.kevin.ql.util.testing.ViewListener;

abstract class Widget {
    private final JPanel panel;
    private List<ViewListener> ui;
    
    Widget(){
	panel = new JPanel();
	ui = new ArrayList<ViewListener>();
    }
    
    public JPanel build() {
	return panel;
    }
    
    private void viewUpdate(Object value) {
	ui.forEach(l -> l.viewUpdate(panelName, value));
    }

}
