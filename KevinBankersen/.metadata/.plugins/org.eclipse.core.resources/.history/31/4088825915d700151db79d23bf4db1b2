package eu.bankersen.kevin.ql.context.errors;

import eu.bankersen.kevin.ql.ast.Type;

public class ExprTypeError extends Error {


    public ExprTypeError(int line, Type lhs, Type rhs, Type expr) {
	message = "Line " + line 
			+ ": expected " + lhs 
			+ " got " + rhs + "!";
    }
    
    public ExprTypeError(int line, Type lhs, Type rhs) {
	message = "Line " + line 
			+ ": expected " + lhs 
			+ " got " + rhs + "!";
    }
    
    public ExprTypeError(int line, String name) {
	message = "Line " + line 
			+ " question \"" + name + "\" already defined!";
    }

    @Override
    public String message() {
	return message;
    }
}