package eu.bankersen.kevin.ql.util.testing;

import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.ComponentEvent;
import java.awt.event.ComponentListener;
import java.awt.event.ContainerEvent;
import java.awt.event.ContainerListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.text.NumberFormat;
import java.util.ArrayList;
import java.util.List;

import javax.swing.JFormattedTextField;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.event.AncestorEvent;
import javax.swing.event.AncestorListener;
import javax.swing.text.NumberFormatter;

import eu.bankersen.kevin.ql.gui.QLgui;

public class MainPanel extends JPanel implements DataListener, UIListener {

    JPanel mainPanel;
    JLabel label;


    private List<DataListener> listeners = new ArrayList<DataListener>();
    private List<UIListener> ui = new ArrayList<UIListener>();


    public MainPanel() {
	mainPanel = new JPanel(new BorderLayout());
	
	NumberFormat format = NumberFormat.getInstance();
	NumberFormatter formatter = new NumberFormatter(format);
	formatter.setValueClass(Integer.class);
	formatter.setMinimum(0);
	formatter.setMaximum(Integer.MAX_VALUE);
	// If you want the value to be committed on each keystroke instead of focus lost
	formatter.setCommitsOnValidEdit(true);
	formatter.setAllowsInvalid(false); 

	JFormattedTextField txField = new JFormattedTextField(formatter);

	txField.addKeyListener(new KeyListener() {

	    @Override
	    public void keyTyped(KeyEvent e) {


	    }

	    @Override
	    public void keyReleased(KeyEvent e) {

		JFormattedTextField field = (JFormattedTextField) e.getSource();

		if (field.getText().equals("8")){
		    MainPanel.this.label.setVisible(false);
		}else {
		    MainPanel.this.label.setVisible(true);

		    someUIelementChanged(Integer.valueOf(field.getText()));
		}
		MainPanel.this.mainPanel.revalidate();
		MainPanel.this.mainPanel.repaint();

	    }

	    @Override
	    public void keyPressed(KeyEvent e) {


	    }
	});

	txField.setPreferredSize(new Dimension(200, 30));
	mainPanel.add(txField, BorderLayout.SOUTH);

	label = new JLabel("Test");

	mainPanel.add(label, BorderLayout.NORTH);
	add(mainPanel);
    }

    public void addListener(DataListener toAdd) {
	listeners.add(toAdd);
    }

    public void addListener(UIListener toAdd) {
	ui.add(toAdd);
    }

    @Override
    public void someDataChanged(int data) {
	label.setText(String.valueOf(data));
    }

    @Override
    public void someUIelementChanged(int data) {
	System.out.println(data);
	ui.forEach(l -> l.someUIelementChanged(data));
    }
}
