package eu.bankersen.kevin.ql.util.testing;

import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.ArrayList;
import java.util.List;
import java.util.Map;

import javax.swing.JFormattedTextField;
import javax.swing.JLabel;
import javax.swing.JPanel;

import eu.bankersen.kevin.ql.ast.Type;
import eu.bankersen.kevin.ql.context.Symbol;
import eu.bankersen.kevin.ql.context.String;

public class MainPanel extends JPanel implements DataListener {

    private JPanel mainPanel;
    private JLabel label;

    private List<ViewListener> ui = new ArrayList<ViewListener>();


    public MainPanel() {
	mainPanel = new JPanel(new BorderLayout());
	

	JFormattedTextField txField = new JFormattedTextField();
	txField.setName("name");

	txField.addKeyListener(new KeyListener() {

	    @Override
	    public void keyTyped(KeyEvent e) {


	    }

	    @Override
	    public void keyReleased(KeyEvent e) {

		JFormattedTextField field = (JFormattedTextField) e.getSource();
		
		String[] object = new String[2];
		object[0] = field.getName();
		object[1] = field.getText();
		
		if (field.getText().equals("")) {
		    object[1] = "Empty";
		    viewUpdate(object);
		} else {
		    viewUpdate(object);
		}
		MainPanel.this.mainPanel.revalidate();
		MainPanel.this.mainPanel.repaint();

	    }

	    @Override
	    public void keyPressed(KeyEvent e) {


	    }
	});

	txField.setPreferredSize(new Dimension(200, 30));
	mainPanel.add(txField, BorderLayout.SOUTH);

	label = new JLabel("Test");
	label.setName("name");

	mainPanel.add(label, BorderLayout.NORTH);
	add(mainPanel);
    }

    public void addUIListener(ViewListener toAdd) {
	ui.add(toAdd);
    }

    @Override
    public void dataUpdate(String symbolTable) {
	Map<String, Symbol> table = (Map<String, Symbol>) symbolTable;
	
	label.setText(String.valueOf(table.get(label.getName()).getValue()));
    }

    private void viewUpdate(Object data) {
	ui.forEach(l -> l.viewUpdate(data, null));
    }
}
