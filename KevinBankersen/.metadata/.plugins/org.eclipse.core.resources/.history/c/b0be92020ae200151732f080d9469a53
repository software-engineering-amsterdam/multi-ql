package eu.bankersen.kevin.ql.ast.form;

import eu.bankersen.kevin.ql.ast.VisitAst;
import eu.bankersen.kevin.ql.context.Context;
import eu.bankersen.kevin.ql.context.QLVisitor;
import eu.bankersen.kevin.ql.context.SymbolTable;

public class Form implements VisitAst {

    private final String name;
    private final Body body;

    public Form(String name, Body body) {
	this.name = name;
	this.body = body;
    }
    
    public Body body() {
	return body;
    }

    public Context checkType() {
	return body.checkType(new Context());
    }

    public SymbolTable evalForm(SymbolTable symbolTable) {
	return body.evalBody(symbolTable);
    }
    
    @Override
    public void accept(QLVisitor visitor) {
	visitor.visit(this);
    }
}

