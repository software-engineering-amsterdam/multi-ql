package eu.bankersen.kevin.ql.ast.stat;

import eu.bankersen.kevin.ql.ast.Type;
import eu.bankersen.kevin.ql.ast.Variable;
import eu.bankersen.kevin.ql.context.Context;

public class Question extends Statement  {

    private final Variable variable;
    private final String text;
    private final Context2 context;

    public Question(Variable variable, String text) {
	context = Context2.getInstance();
	this.variable = variable;
	this.text = text;
    }

    public String getText() {
	return text;
    }

    public Context checkType(Context context) {
	System.out.println(2);
	return variable.checkType(context);
    }

    public Type getType() {
	return variable.getType();
    }
    
    public String getName() {
	return variable.getName();
    }
    
    public Object getValue() {
	return context.getSymbol(variable.getName()).getValue();
    }
    
    public Context visible(Context context, final Boolean visible) {
	context.setVisibility(this.getName(), visible);
	return context;
    }
    
    public Context evalStatement(Context context) {
	return variable.eval(context);
    }
    
    @Override
    public String toString() {
	return text + "\n" + variable.toString() + "\n\n";
    }
}
